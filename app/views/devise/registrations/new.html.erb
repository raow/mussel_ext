<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "register-form") do |f| %>
  <h3 class="form-title">注册</h3>
  <%= devise_error_messages! %>
  <div class="alert alert-danger display-hide">
    <button class="close" data-close="alert"></button>
    <span>
    请输入账号和密码. </span>
  </div>
  <div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <%= f.label :email, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>
  <p>
    供应商详细信息
  </p>
  <%= f.fields_for :service_vendor do |service_vendor| %>
  <div class="form-group">
    <%= service_vendor.label :name, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :name, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Name" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :contact, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :contact, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Contact" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :phone, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :phone, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Phone" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :province, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :province, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Province" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :city, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :city, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "City" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :region, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :region, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Region" %>
    </div>
  </div>
  <div class="form-group">
    <%= service_vendor.label :location_details, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= service_vendor.text_field :location_details, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "LocationDetails" %>
    </div>
  </div>
  <% end %>
  <div class="form-actions">
    <button type="submit" id="register-submit-btn" class="btn green pull-right">
    注册 <i class="m-icon-swapright m-icon-white"></i>
    </button>
  </div>
  <div class="create-account">
    <p>
      已经有账号?&nbsp; <%= link_to "登陆", new_session_path(resource_name) %>
    </p>
  </div>
<% end %>