<div data-role="page" id="div_show">
<div data-role="collapsible-set" data-inset="true">
  <%@service_orders.each do |order|%>
  <div class="ui-corner-all custom-corners">
    <div class="ui-bar ui-bar-a">
      <h3><%= order.service_item.name unless order.service_item.nil? %></h3>
    </div>
    <div class="ui-body ui-body-a">
      <p>预约时间: <%= order.appointed_time.strftime('%Y-%m-%d %H:%M') unless order.appointed_time.nil? %></p>
      <p>当前状态: <%= order.status %></p>
      <p>商户名称: <%= order.service_vendor.name unless order.service_vendor.nil? %></p>
      <p>商户地址: <%= "#{order.service_vendor.province}-#{order.service_vendor.city}-#{order.service_vendor.region}-#{order.service_vendor.location_details}" unless order.service_vendor.nil? %> </p>
      <p>商户电话: <%= order.service_vendor.phone unless order.service_vendor.nil? %></p>
      <% order.next_actions(@user).map do |key,val| %>
          <%= link_to key, { controller: "service_orders", action: val, id: order.id }, class: "ui-btn ui-btn-inline", method: :post %>
      <% end %>
    </div>
  </div>
  <% end %>

</div>
<!--  -->
</div>
